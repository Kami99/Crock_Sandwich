{% extends "pages/BackApp/admin.html.twig" %}
{% block Container %}
     <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Profil</h1>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Table Profil</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-dark  table-hover table-info" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>id</th>
                      <th>libelle</th>
                      <th>Date d'ajout </th>
                      <th>Supprimer / Editer</th>
                    </tr>
                  </thead>
                  <tbody>

                  {% for profil in profils  %} 
                    <tr>

                      <td>{{profil.id}}</td>
                      <td>{{profil.libelle}}</td>
                      <td>{{profil.createdAt|date("d-m-Y | H:i:s")}}</td> 
                      <td class="inline-block">
                        <a class="btn btn-large btn-xs btn-danger m-2" href="{{ path('deleteProfil',{id: profil.id}) }}" onClick="return confirm('Voulez vous supprimmer ?');" role="button">Supprimer</a>
                        <a class="btn btn-large btn-xs btn-warning" href="" onClick="return confirm('Voulez vous supprimmer ?');" role="button">Editer</a>
                      </td>

                  
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
                <a class="btn btn-primary"href="{{path('{{path('editProfil',{id: profil.id})}}')}}" role="button">Ajouter Un profil</a>
              </div>
            </div>
          </div>

        </div>
{% endblock %}