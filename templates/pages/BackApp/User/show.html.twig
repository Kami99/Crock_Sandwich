{% extends "pages/BackApp/admin.html.twig" %}
{% block Container %}
     <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 mb-2 text-gray-800">Profil</h1>
          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Table Profil</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-dark  table-hover table-info" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>id</th>
                      <th>nom</th>
                      <th>prenom</th>
                      <th>login</th>
                      <th>Mots de passe</th>
                      <th>Adresse</th>
                      <th>Date de Creation</th>
                    </tr>
                  </thead>
                  <tbody>

                  {% for user in users  %} 
                    <tr>

                      <td>{{user.id}}</td>
                      <td>{{user.name}}</td>
                      <td>{{user.lastName}}</td>
                      <td>{{user.login}}</td>
                      <td>{{user.password}}</td>
                      <td>{{user.address}}</td>           
                      <td>{{user.createdAt|date("d-m-Y | h:m:i")}}</td> 
                      <a class="btn btn-large btn-xs btn-danger m-2" href="{{ path('deleteMenu',{id: menu.id}) }}" onClick="return confirm('Voulez vous supprimmer ?');" role="button">Supprimer</a>
                      <a class="btn btn-large btn-xs btn-warning" href="" onClick="return confirm('Voulez vous supprimmer ?');" role="button">Editer</a>                 
                    </tr>
                    {% endfor %}
                  </tbody>
                </table>
                <a class="btn btn-primary"href="{{path('addUser')}}" role="button">Ajouter Un utilisateur</a>
              </div>
            </div>
          </div>

        </div>
{% endblock %}